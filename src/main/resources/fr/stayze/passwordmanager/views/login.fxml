<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<Pane styleClass="main" xmlns:fx="http://javafx.com/fxml" fx:controller="fr.stayze.passwordmanager.controllers.LoginController">
    <Label layoutX="73.0" layoutY="45.0" text="Password Manager" textFill="WHITE">
        <font>
            <Font name="Comic Sans MS" size="30.0"/>
        </font>
    </Label>
    <TextField layoutX="58.0" layoutY="127.0" prefHeight="36.0" prefWidth="282.0" promptText="Nom d'utilisateur" styleClass="field" fx:id="username">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <PasswordField layoutX="58.0" layoutY="215.0" prefHeight="36.0" prefWidth="282.0" promptText="Mot de passe" styleClass="field" fx:id="password">
        <font>
            <Font size="15.0"/>
        </font>
    </PasswordField>
    <Button layoutX="125.0" layoutY="306.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="148.0" text="Connexion" styleClass="button" onAction="#login"/>
    <Line endX="282.0" layoutX="58.0" layoutY="163.0" styleClass="line"/>
    <Line endX="282.0" layoutX="58.0" layoutY="251.0" styleClass="line"/>
</Pane>
